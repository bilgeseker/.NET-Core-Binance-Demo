            <script>//arama yapmak için
                $(document).ready(function () {
                    $("#myInput").on("keyup", function () { //input kısmında "keyup" ile basılan tuşları al
                        var value = $(this).val().toLowerCase();  //girilen yazıyı küçük harfle olacak şekilde ayarla
                        $("#myTable tr").filter(function () { //tablodaki verilerde girilen yazıyı ara
                            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                        });
                    });
                });
            </script>

